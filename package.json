{
  "name": "@telefonica/bot-core",
  "version": "1.13.0",
  "description": "Bot Core package to run bots",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts-info": {
    "info": "List available scripts",
    "build": "Builds the plugin, by cleaning and compiling TypesScript into Javascript",
    "compile": "Just compiles your code",
    "dev": "Watch codebase, trigger compile when source code changes",
    "lint": "Check coding guidelines conformance",
    "security": "Check if your dependencies are secure",
    "test": "Test your codebase"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "shx rm -fR ./lib",
    "compile": "tsc",
    "dev": "npm run watch",
    "info": "npm-scripts-info",
    "lint": "tslint './src/**/*.ts'",
    "prepublish": "npm run build",
    "security": "nsp check",
    "test": "npm run build && mocha -R spec 'lib/**/*.spec.js'",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Telefonica/yot-bot/tree/master/packages/bot-core"
  },
  "keywords": [
    "bot",
    "fourth platform"
  ],
  "author": "TDAF <tdaf@tid.es>",
  "license": "UNLICENSED",
  "dependencies": {
    "@slack/client": "^3.6.0",
    "@telefonica/object-storage": "^1.0.0",
    "alfalfa": "^2.1.0",
    "bingspeech-api-client": "^2.0.0",
    "botbuilder": "3.4.2",
    "cld": "^2.4.7",
    "express": "^4.14.0",
    "logops": "^1.0.6",
    "request": "^2.75.0",
    "server-terminate": "^1.3.1",
    "streamifier": "^0.1.1",
    "therror": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.33",
    "@types/express": "^4.0.0",
    "@types/mocha": "^2.2.32",
    "@types/nock": "^8.0.33",
    "@types/node": "^6.0.40",
    "@types/request": "0.0.31",
    "@types/sinon": "^1.16.30",
    "@types/sinon-chai": "^2.7.27",
    "chai": "^3.5.0",
    "mocha": "^3.0.2",
    "nock": "^8.0.0",
    "nodemon": "^1.10.2",
    "npm-scripts-info": "^0.3.6",
    "nsp": "^2.6.1",
    "shx": "^0.1.4",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.0"
  }
}
